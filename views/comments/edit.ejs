<%- include ('../partials/header'); -%>

    <body style="background-color:rgb(207, 218, 219);"></body>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit comment
            </h1>
            <div style="width:30%; margin: 10px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="mb-2">
                        <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>">
                    </div>


                    <div class="d-grid gap-2 col-12 mx-auto">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>


        </div>


    </div>




    <%- include ('../partials/footer'); -%>